{% extends 'base.html.twig' %}

{% block body_id 'register' %}

{% block main %}
    {%dump app.flashes %}
    <div class="row">
        <div class="col-sm-12">
            <div class="well">
                <form action="{{ path('security_register') }}" method="post">
                    <fieldset>
                        <div class="form-group">
                            <label>
                                <label for="full_name">{{ 'label.full_name'|trans }}</label>
                                <input type="text" id="full_name" name="full_name" value="{{ full_name }}" class="form-control" />
                            </label>
                        </div>
                        <div class="form-group">
                            <label>
                                <label for="email">{{ 'label.email'|trans }}</label>
                                <input type="text" id="email" name="email" value="{{ username }}" class="form-control" />
                            </label>
                        </div>

                        <legend><i class="fa fa-lock" aria-hidden="true"></i> {{ 'title.register'|trans }}</legend>
                        <div class="form-group">
                            <label for="username">{{ 'label.username'|trans }}</label>
                            <input type="text" id="username" name="username" value="{{ username }}" class="form-control" />
                        </div>

                        <div class="form-group form-group-password">
                            <label for="password">{{ 'label.password'|trans }}</label>
                            <input type="password" id="password" name="password"
                                   class="form-control" />
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'action.register'|trans }}
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

